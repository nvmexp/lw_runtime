struct VSOut
{
   float4 position : SV_POSITION;
   float2 texcoord : TEXCOORD;
   float4 color : COLOR;
};

Texture2D txUIAtlas : register( t0 );
SamplerState samLinear : register( s0 );

float4 main( VSOut frag ): SV_Target
{
    float4 clr = frag.color * txUIAtlas.Sample(samLinear, frag.texcoord);
    return clr;
}